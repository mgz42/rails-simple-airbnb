<div class="container">
  <h1>All our flats (<%= @flats.length %>)</h1>
  <div class="row g-3 gx-4">
    <% @flats.each do |flat| %>
    <div class="col-4">
    <div class="border">
    <div class="border-bottom bg-light carte">
    <div class= <%= !flat.picture_url ? "placehold" : ""%>></div>
    <img src=<%= flat.picture_url %>>
    <h3><%= flat.name %></h3 class="p-4">
      <p><%= flat.address %></p>
      <div class="d-flex">
        <div class="p-2">p(<%= flat.number_of_guests %>)</div>
        <div class="p-2">euro(<%= flat.price_per_night %>)</div>
      </div>
    </div>
    <div class="d-flex">
      <%= link_to "MORE INFOS", flat_path(flat.id), class: "p-1"%>
      <%= link_to "Edit", edit_flat_path(flat.id), class: "p-1"%>
      <%= link_to "Remove", flat_path(flat.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "p-1" %>
    </div>
  </div>
    </div>
    <% end %>
  </div>
</div>
